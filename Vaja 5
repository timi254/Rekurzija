public class Naloga5 {
    public static int zap(int n){
        if(n==1)
        {
            return 1;
        }
        else if(n==2)
        {
            return 2;
        }
        else
        {
            return (zap(n-1)*2+zap(n-2));
        }
    }
    public static void main(String[] args) {
        System.out.println(zap(3));
    }
}
